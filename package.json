{
  "name": "@matchmore/matchmore",
  "version": "0.7.3",
  "description": "A cloud service for creating highly dynamic, location-based applications",
  "license": "MIT",
  "main": "dist/index.js",
  "homepage": "https://matchmore.io",
  "scripts": {
    "build": "tsc",
    "test": "./node_modules/.bin/mocha --require isomorphic-fetch --compilers ts:ts-node/register ./test/**/*.ts",
    "browserify": "browserify ./dist/index.js --standalone matchmore > ./dist/web/matchmore.js",
    "minify": "browserify ./dist/index.js --standalone matchmore | uglifyjs -c > ./dist/web/matchmore.min.js",
    "dist": "npm run build && npm run browserify && npm run minify"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^2.2.48",
    "babel-core": "^6.26.0",
    "browserify": "^16.2.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "copyfiles": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^3.2.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2"
  },
  "dependencies": {
    "Base64": "^1.0.1",
    "querystring": "^0.2.0",
    "superagent": "^3.8.3",
    "websocket": "^1.0.25"
  }
}
